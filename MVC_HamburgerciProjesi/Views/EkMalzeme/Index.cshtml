@using HamburgerciProject.Application.Models.DTOs;
@model IEnumerable<EkstraMalzemeDTO>

@{
    ViewData["Title"] = "Index";

}

<h1>Index</h1>

<p>
    <a asp-action="Create">Yeni Ekstra Malzeme Oluştur</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EkstraAdi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EkstraFiyat)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EkstraAdi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EkstraFiyat)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
