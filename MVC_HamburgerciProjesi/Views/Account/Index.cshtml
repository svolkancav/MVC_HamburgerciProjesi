@using HamburgerciProject.Application.Models.DTOs;
@using X.PagedList;
@using X.PagedList.Mvc.Core;
@model IPagedList<RegisterDTO>

@{
    ViewData["Title"] = "Index";

}

<h1>Index</h1>

<p>
    <a asp-action="Create">Yeni Menü Oluştur</a>
</p>
@using (Html.BeginForm())
{
    <p>
        Kullanıcı ara: @Html.TextBox("deger")
        <input type="submit" value="Find" />
    </p>
}
<p>
    <button type="reset">
        <a href="Index" style="color:black; text-decoration:none">Yenile</a>
    </button>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Username
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.UserName
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<tr>
    @Html.PagedListPager((IPagedList)Model, p=>Url.Action("Index",new{p}))
</tr>




