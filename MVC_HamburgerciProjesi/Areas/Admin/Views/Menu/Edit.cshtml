@using HamburgerciProject.Application.Models.DTOs;
@model MenuDTO


@{
    ViewData["Title"] = "Edit";

}

<div class="row">
    <div class="col-md-12">
        <form method="post" action="@Url.Action("Edit","Menu")">
            <input type="hidden" name="id" value="@Model.Id" />
            <div class="form-group">
                <label>Menü Adı</label>
                <input type="text" asp-for="MenuAdi" class="form-control" name="MenuAdi" placeholder="Menü Adı..." value="@Model.MenuAdi" required>
            </div>
            <div class="form-group">
                <label>Fiyatı</label>
                <input type="text" asp-for="MenuFiyati" class="form-control" name="MenuFiyati" placeholder="Fiyatı" value="@Model.MenuFiyati" required>
            </div>
             
           @* <div class="form-group">
                <label>Fiyatı</label>
                <input type="text" asp-for="UploadPath" class="form-control" name="Resim" placeholder="Resim" value="@Model.UploadPath" required>
            </div>*@

            <button class="btn btn-success" type="submit">Güncelle</button>
        </form>
    </div>
</div>