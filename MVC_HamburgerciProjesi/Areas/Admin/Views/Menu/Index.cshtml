@using HamburgerciProject.Application.Models.DTOs;
@model IEnumerable<MenuDTO>

@{
    ViewData["Title"] = "Index";
 
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Yeni Menü Oluştur</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MenuAdi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MenuFiyati)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Boyutu)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MenuAdi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MenuFiyati)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Boyutu)
                </td>
                
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
